{
  "name": "q-economics",
  "version": "1.0.0",
  "description": "Online testing portal for economics students",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "test": "jest",
    "lint": "eslint .",
    "install-client": "cd client && npm install --legacy-peer-deps",
    "build-client": "cd client && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "seed": "sequelize-cli db:seed:all",
    "backup": "node server/scripts/backup.js",
    "backup-status": "node server/scripts/backup-status.js",
    "init-backup": "mkdir -p backups && node server/scripts/backup.js",
    "test:watch": "jest --watch",
    "lint:fix": "eslint . --fix",
    "ci": "npm run lint && npm run test",
    "logs:rotate": "node server/scripts/rotate-logs.js",
    "logs:clean": "node server/scripts/clean-logs.js",
    "perf:load": "node server/tests/performance/loadTest.js",
    "perf:stress": "node server/tests/performance/stressTest.js",
    "perf:all": "npm run perf:load && npm run perf:stress"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "nodemailer": "^6.9.1",
    "aws-sdk": "^2.1499.0",
    "moment": "^2.29.4",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-elasticsearch": "^0.17.4",
    "path": "^0.12.7",
    "@slack/webhook": "^6.1.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@types/jest": "^27.5.2",
    "autocannon": "^7.12.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "",
  "license": "ISC"
}
